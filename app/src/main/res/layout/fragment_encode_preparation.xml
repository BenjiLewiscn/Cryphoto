<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EncodePreparation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonSelectCanvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_canvas" />

        <ImageView
            android:id="@+id/selectedCanvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name" />

        <Button
            android:id="@+id/buttonSelectSecret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_secret_image" />

        <ImageView
            android:id="@+id/selectedSecret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name" />
        <Button
            android:id="@+id/buttonStartEncode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_encoding"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>